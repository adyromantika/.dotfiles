export ZSH=$HOME/.oh-my-zsh

plugins=(
  git git-extras python pip cp colorize
)

if [ \which kubectl >/dev/null 2>&1 ]; then
  plugins=+(
    kubectl kubectx
  )
  source <(kubectl completion zsh)
fi

ZSH_THEME="powerlevel10k/powerlevel10k"

source $ZSH/oh-my-zsh.sh

export DEFAULT_USER="ady"
export PATH="$HOME/go/bin:$HOME/bin:$HOME/scripts/:$PATH"

[ -f /usr/share/google-cloud-sdk/completion.zsh.inc ] && source /usr/share/google-cloud-sdk/completion.zsh.inc
[ -f /home/ady/.travis/travis.sh ] && source /home/ady/.travis/travis.sh
[ -f /usr/share/autojump/autojump.sh ] && . /usr/share/autojump/autojump.sh

if [ \which go >/dev/null 2>&1 ]; then
  export GOPATH="$HOME/go"
fi

if [ -d "$HOME/.nvm" ]; then
  export NVM_DIR="$HOME/.nvm"
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
  [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
  plugins=+(
    zsh-nvm
  )
fi

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
if [ -f "$HOME/.rvm/scripts/rvm" ]; then
  export PATH="$PATH:$HOME/.rvm/bin"
  source /home/ady/.rvm/scripts/rvm
fi

if [ -f ~/.zshenv ]; then
  . ~/.zshenv
fi
